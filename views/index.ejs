<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head.ejs') %>
  <title>Document</title>
</head>
<body>
    <%- include('partials/header.ejs') %>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb bg-light p-3">
        <li class="breadcrumb-item">Home</li>
        <li class="breadcrumb-item active" aria-current="page"><a href="/">Products</a></li>
      </ol>
    </nav>
    <div class="container mt-5">
        <div class="title">
            <h3>Cheirs</h3>
            <div class="tit-btn">
                <i class="fa-solid fa-plus"></i>
                <a href="/new"><button>Добавить продукт</button></a>
            </div>
        </div>
        <div class="row row-cols-1 row-cols-md-4 g-4">
          <%
              data.forEach((item , index) => {
          %>
          <div class="col">
            <div class="card p-5">
              <img src="/style/images/cheir.svg" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title"><%=item.title%></h5>
                <h5 class="card-text"><%=item.price%></h5>
              </div>
              <div class="sale"><%=item.sale%></div>
              <div class="heart"><i class="fa-regular fa-heart"></i></div>
              <div class="menu" onclick="chageBurgerMenu('<%=index%>')"><i class="fa-solid fa-ellipsis"></i></div>
              <div class="ell"><i class="fa-solid fa-plus"></i></div>
              <div class="burger-menu" >
                <div class="burger-menu-item"><a href="/edit/<%=item._id%>">Редактировать</a></div>
                <div class="burger-menu-item"><button onclick="deleteItem('<%=item._id%>')">Удалить</button></div>
              </div>
            </div>
          </div>

          <%

              })
          %>
        </div>
    </div>
    <script>
      let menu = document.getElementsByClassName('burger-menu')
      function chageBurgerMenu(index){
        console.log(index);
        menu[index].classList.toggle('open-menu')
      }
    </script>
    <script src="https://kit.fontawesome.com/0869a7851e.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.3.4/axios.min.js" integrity="sha512-LUKzDoJKOLqnxGWWIBM4lzRBlxcva2ZTztO8bTcWPmDSpkErWx0bSP4pdsjNH8kiHAUPaT06UXcb+vOEZH+HpQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="/js/delete.js"></script>
</body>
</html>
